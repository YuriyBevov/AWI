block variables
  - sectionClass = ''
  - sectionContainerClass = ''
  - sectionHeadline = ''
  - sectionTitle = ''
  - sectionText  = ''
  - hideSectionHeader = ''

section.section(class= sectionClass)
  .container(class= sectionContainerClass)

    if hideSectionHeader != true
      .section__header
        if sectionHeadline
          span.section__headline!= sectionHeadline
        if sectionTitle
          h2.title!= sectionTitle
        if sectionText
          != sectionText
    block content

- hideSectionHeader = ''
