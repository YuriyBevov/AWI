extends ../../layouts/section/tpl.pug

block variables
  - sectionClass = 'about'
  - sectionID = 'about'
  - sectionContainerClass = ''
  - sectionLabel = { text: 'О нас', class: 'label--bordered label--dotted' }
  - sectionTitle = 'Академия водных искусств'
  - sectionText = '<p>— объединяет профессионалов и любителей, обеспечивая идеальные условия для обучения и развития в области синхронного плавания, плавания других водных активностей.</p><p>В нашей академии вы сможете не только освоить технику плавания, но и открывать для себя мир спортивных достижений.</p>'
  - sectionHeaderSide = true

block content
  .img-grid-container
    .img-grid
      picture
        source(srcset="./assets/img/about-img-1@2x.webp 2x, ./assets/img/about-img-1.webp 1x", type="image/webp")
        source(srcset="./assets/img/about-img-1@2x.png 2x, ./assets/img/about-img-1.png 1x", type="image/png")
        img(src="./assets/img/about-img-1.png" alt="О нас фото 1" width="560" height="280")
      picture
        source(srcset="./assets/img/about-img-2@2x.webp 2x, ./assets/img/about-img-2.webp 1x", type="image/webp")
        source(srcset="./assets/img/about-img-2@2x.png 2x, ./assets/img/about-img-2.png 1x", type="image/png")
        img(src="./assets/img/about-img-2.png" alt="О нас фото 2" width="560" height="280")

