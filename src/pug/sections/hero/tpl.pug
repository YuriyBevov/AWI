include ../../components/features-row/tpl.pug
include ../../components/label/tpl.pug
include ../../components/main-btn/tpl.pug

section.section.hero#hero
  .container
    .grid
      .grid-item.hero__content 
        +label({
          text: 'Первое занятие бесплатно',
          cls: 'label--bordered label--colored',
        })

        h1.title Академия водных искусств
        p.text Обучаем с нуля девочек и мальчиков школьного и дошкольного возраста спортивному и синхронному плаванию

        +mainBtn({
          text: 'Хочу бесплатное занятие',
          modalID: 'promo-modal',
        })
      .grid-item.hero__banner
        picture
          source(srcset="./assets/img/hero_banner.webp 1x, ./assets/img/hero_banner@2x.webp 2x", type="image/webp")
          source(srcset="./assets/img/hero_banner.png 1x, ./assets/img/hero_banner@2x.png 2x", type="image/png")
          img(src="./assets/img/hero_banner.png" srcset="./assets/img/hero_banner@2x.png 2x" alt="АВИ - Академия Водных Искусств" width="530" height="530" fetchpriority="high")
      .grid-item.hero__side
        .banner-sm
          picture
            source(srcset="./assets/img/banner-sm-img-1.webp 1x, ./assets/img/banner-sm-img-1@2x.webp 2x", type="image/webp")
            source(srcset="./assets/img/banner-sm-img-1.png 1x, ./assets/img/banner-sm-img-1@2x.png 2x", type="image/png")
            img(src="./assets/img/banner-sm-img-1.png" srcset="./assets/img/banner-sm-img-1@2x.png 2x" alt="АВИ - Академия Водных Искусств" width="270" height="200")
        .banner-sm
          picture
            source(srcset="./assets/img/banner-sm-img-2.webp 1x, ./assets/img/banner-sm-img-2@2x.webp 2x", type="image/webp")
            source(srcset="./assets/img/banner-sm-img-2.png 1x, ./assets/img/banner-sm-img-2@2x.png 2x", type="image/png")
            img(src="./assets/img/banner-sm-img-2.png" srcset="./assets/img/banner-sm-img-2@2x.png 2x" alt="АВИ - Академия Водных Искусств" width="270" height="200")

