extends ../../../../layouts/modals/tpl

block variables
  - modalId = "callback-modal"
  - modalClasses = "callback-modal"
  - modalTitle = 'Записаться'
  - modalPreviewText = ''

block modalContent
  p.text Обратный звонок

  +form({
    fields: [
      {
        type: "text",
        name: "name",
        placeholder: "Имя",
        required: true
      },
      {
        type: "tel",
        name: "phone",
        placeholder: "Телефон",
        required: true
      },
      {
        type: "checkbox",
        name: "callback-modal-consent",
        required: true,
        label: `Я согласен с условиями обработки <button type="button" data-modal-opener="policy-modal" class="link link--underlined">персональных данных</button>`
      }
    ],
    buttonText: "Отправить",

  })